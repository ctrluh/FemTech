@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <style>
        /* Menu drop-down */
        body {
            margin: 0;
        }
        .menu-container {
            position: fixed;
            top:10px;
            right: 10px;
            z-index: 1000;
            display: inline-block;
        }
        .menu-button{
            font-size: 18px;
        }
        .dropdown-menu {
            display: none;
        }
        .menu-container:hover .dropdown-menu {
            display: block;
            position: absolute;
            background-color: white;
            border: 1px solid #ccc;
            padding: 10px;
            z-index: 1000;
        }
	.dropdown-menu button{
		display: block;
	}
	.dropdown-menu button:hover {
		background-color: #B0C4DE
	}
 </style>
}

